@using DevExtreme.AspNet.Mvc
@model FrontEndDevExtreme.Models.WorkItemDetailModel

@{
    ViewData["Title"] = "Chi tiết công việc";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        @(Html.DevExtreme().Form()
                .ID("workItemDetailsForm")
                .ColCount(1)
                .Items(items =>
                {
                    items.AddGroup()
                .Caption("Thông tin công việc")
                .Items(groupItems =>
                {
                    groupItems.AddSimpleFor(m => m.TaskName);
                    groupItems.AddSimple()
                .Label(l => l.Text("Trạng thái"))
                .Template(@<text>
            @{
            var statusText = Model.Status switch
            {
            0 => "Chưa thực hiện",
            1 => "Đang thực hiện",
            2 => "Đã xong",
            _ => "Không xác định"
            };
            }
            <div>@statusText</div>
        </text>);
                    groupItems.AddSimple()
                .Label(l => l.Text("Tiến độ"))
                .Template(@<text>
            <div>@Model.Progress%</div>
        </text>);
                    groupItems.AddSimpleFor(m => m.TaskType)
                .Label(l => l.Text("Loại công việc"));
                    groupItems.AddSimple()
                .Label(l => l.Text("Độ ưu tiên"))
                .Template(@<text>
            @{
            var priorityText = Model.Priority switch
            {
            1 => "Thấp",
            2 => "Trung bình",
            3 => "Cao",
            _ => "Không xác định"
            };
            var priorityClass = Model.Priority switch
            {
            1 => "badge bg-success text-white",
            2 => "badge bg-warning text-dark",
            3 => "badge bg-danger text-white",
            _ => "badge bg-secondary"
            };
            }
            <span class="@priorityClass">@priorityText</span>
        </text>);
                    groupItems.AddSimple()
                .Label(l => l.Text("Ghim"))
                .Template(@<text>
            <div>@((Model.IsPinned) ? "Có" : "Không")</div>
        </text>);
                    groupItems.AddSimpleFor(m => m.StartDate)
                .Label(l => l.Text("Ngày bắt đầu"))
                .Editor(e => e.DateBox().DisplayFormat("dd/MM/yyyy").ReadOnly(true));
                    groupItems.AddSimpleFor(m => m.EndDate)
                .Label(l => l.Text("Ngày kết thúc"))
                .Editor(e => e.DateBox().DisplayFormat("dd/MM/yyyy").ReadOnly(true));
                    groupItems.AddSimple()
                .Label(l => l.Text("Người giao việc"))
                .Template(@<text>
            <div>@Model.AssignerName</div>
        </text>);
                    groupItems.AddSimple()
                .Label(l => l.Text("Phòng ban nhận"))
                .Template(@<text>
            @foreach (var dept in Model.DepartmentList?.Split(',', StringSplitOptions.TrimEntries) ?? Enumerable.Empty<string>())
            {
            <div>@dept</div>
            }
        </text>);
                    groupItems.AddSimple()
                .Label(l => l.Text("Người nhận"))
                .Template(@<text>
            @foreach (var user in Model.UserList?.Split(',', StringSplitOptions.TrimEntries) ?? Enumerable.Empty<string>())
            {
            <div>@user</div>
            }
        </text>);
                });
                })
            .StylingMode("outlined")
            )
        <a href="@Url.Action("Index", "WorkItem")" class="btn btn-secondary mt-3">Đóng</a>
    </div>

    <div class="col-md-6 mt-md-0 mt-3">
        <div class="card p-3">
            <h4>Ghi chú</h4>
            @(Html.DevExtreme().List()
                .ID("noteList")
                .DataSource(Model.Notes
                .OrderByDescending(n => n.CreatedDate)
                .Select(note => new
                {
                    ID = note.NoteID,
                    Text = $"{note.CreatedDate:dd/MM/yyyy HH:mm}: {note.Content}"
                }))
                .DisplayExpr("Text")
                .KeyExpr("ID")
                .SelectionMode(DevExtreme.AspNet.Mvc.ListSelectionMode.None)
                .ShowScrollbar(ShowScrollbarMode.Always)
                .Height(200)
                )

            <div class="mt-3">
                @(Html.DevExtreme().TextArea()
                    .ID("noteContent")
                    .Height(120)
                    .Placeholder("Thêm ghi chú mới...")
                    .StylingMode("outlined"))
            </div>

            <div class="mt-2">
                @(Html.DevExtreme().Button()
                    .ID("btnAddNote")
                    .Text("Thêm ghi chú")
                    .Type(ButtonType.Success)
                    .StylingMode("contained")
                    .OnClick("addNote"))
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function addNote() {
            const $textArea = $("#noteContent").dxTextArea("instance");
            const content = $textArea.option("value")?.trim();

            if (!content) {
                DevExpress.ui.notify("Vui lòng nhập nội dung ghi chú", "warning", 2000);
                return;
            }

            $textArea.option("disabled", true);

            $.ajax({
                url: '@Url.Action("AddNote", "WorkItem")',
                method: "POST",
                data: {
                    workItemId: @Model.WorkItemID,
                    content: content
                },
                success: function (res) {
                    if (res.success) {
                        DevExpress.ui.notify("Đã thêm ghi chú", "success", 2000);
                        window.location.reload();
                    } else {
                        DevExpress.ui.notify(res.message || "Thêm ghi chú thất bại", "error", 2000);
                    }
                },
                error: function () {
                    DevExpress.ui.notify("Lỗi khi gọi API", "error", 2000);
                },
                complete: function () {
                    $textArea.option("disabled", false);
                }
            });
        }
    </script>
}