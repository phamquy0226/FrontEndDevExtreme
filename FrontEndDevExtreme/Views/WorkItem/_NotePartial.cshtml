@model IEnumerable<FrontEndDevExtreme.Models.NoteViewModel>

<div class="card p-3">
    @(Html.DevExtreme().List()
        .ID("noteListPop")
        .DataSource(Model.OrderByDescending(n => n.CreatedDate).Select(note => new
        {
            ID = note.NoteID,
            Text = $"{note.CreatedDate:dd/MM/yyyy HH:mm}: {note.Content}"
        }))
        .DisplayExpr("Text")
        .KeyExpr("ID")
        .SelectionMode(ListSelectionMode.None)
        .ShowScrollbar(ShowScrollbarMode.Always)
        .Height(200)
        )

    <div class="mt-3">
        @(Html.DevExtreme().TextArea()
            .ID("noteContentPop")
            .Height(120)
            .Placeholder("Thêm ghi chú mới..."))
    </div>

    <div class="mt-2">
        @(Html.DevExtreme().Button()
            .ID("btnAddNotePop")
            .Text("Thêm ghi chú")
            .Type(ButtonType.Success)
            ) 
    </div>
</div>
